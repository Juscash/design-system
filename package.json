{
  "name": "design_juscash",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build -w @Juscash/design-system && npm run build -w docs",
    "build:design-system": "npm run build -w @Juscash/design-system",
    "build:docs": "npm run build -w docs",
    "dev:docs": "npm run dev -w docs",
    "lint": "echo \"no lint configured\"",
    "test": "echo \"no tests configured\"",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major",
    "version:publish": "node scripts/version-publish.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^20.17.0"
  }
}
